    <script>
      // Animación de la carta portada
      function abrirInvitacion() {
        const envelope = document.getElementById('envelope');
        const flap = document.getElementById('flap');
        const openingPage = document.getElementById('openingPage');
        const mainContent = document.getElementById('mainInvitation');

        envelope.classList.add('abierto');

        setTimeout(() => {
          openingPage.classList.add('oculto');
          setTimeout(() => {
            openingPage.style.display = 'none';
            mainContent.classList.remove('hidden');
          }, 1000);
        }, 1000);
      }

      // Countdown timer
      function updateCountdown() {
          const weddingDate = new Date('December 26, 2025 16:00:00').getTime();
          const now = new Date().getTime();
          const distance = weddingDate - now;
          
          const days = Math.floor(distance / (1000 * 60 * 60 * 24));
          const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
          const seconds = Math.floor((distance % (1000 * 60)) / 1000);
          
          document.getElementById('days').innerHTML = days.toString().padStart(2, '0');
          document.getElementById('hours').innerHTML = hours.toString().padStart(2, '0');
          document.getElementById('minutes').innerHTML = minutes.toString().padStart(2, '0');
          document.getElementById('seconds').innerHTML = seconds.toString().padStart(2, '0');
      }
      setInterval(updateCountdown, 1000);
      updateCountdown();

      // Modal functionality
      const rsvpBtn = document.getElementById('rsvpBtn');
      const rsvpModal = document.getElementById('rsvpModal');
      const closeModal = document.getElementById('closeModal');
      const confirmationMessage = document.getElementById('confirmationMessage');
      const closeConfirmation = document.getElementById('closeConfirmation');
      const rsvpForm = document.getElementById('rsvpForm');
      
      rsvpBtn.addEventListener('click', () => {
          rsvpModal.classList.add('active');
      });
      
      closeModal.addEventListener('click', () => {
          rsvpModal.classList.remove('active');
      });
      
      closeConfirmation.addEventListener('click', () => {
          confirmationMessage.classList.remove('active');
      });
      
      rsvpForm.addEventListener('submit', (e) => {
          e.preventDefault();
          rsvpModal.classList.remove('active');
          
          // Collect form data
          const formData = new FormData(rsvpForm);
          const data = Object.fromEntries(formData);
          
          // Send via mailto (actual email submission would need server-side code)
          const subject = `Confirmación de Asistencia - ${data.name}`;
          const body = `Nombre: ${data.name}\nEmail: ${data.email}\nInvitados: ${data.guests}\nAsistencia: ${data.attending}\nMensaje: ${data.message || 'Ninguno'}`;
          window.location.href = `mailto:kelvingadames@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
          
          setTimeout(() => {
              confirmationMessage.classList.add('active');
          }, 300);
          
          // Reset form
          rsvpForm.reset();
      });

      // Close modals when clicking outside
      window.addEventListener('click', (e) => {
          if (e.target === rsvpModal) {
              rsvpModal.classList.remove('active');
          }
          if (e.target === confirmationMessage) {
              confirmationMessage.classList.remove('active');
          }
      });
    </script>